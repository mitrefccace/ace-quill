<!DOCTYPE html>
<html>

<head>
  <% include ..//partials/head %>
</head>

<body class="skin-blue fixed sidebar-mini sidebar-mini-expand-feature">
  <div class="wrapper">

    <!-- Header -->
    <% include ..//partials/header %>

    <!-- Left side column. contains the logo and sidebar -->
    <% include ..//partials/sidebar %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1>STT Engines</h1>
            </div>
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><i class="fa fa-gears"></i>&nbsp;Settings</li>
                <li class="breadcrumb-item active">STT Engines</li>
              </ol>
            </div>
          </div>
        </div><!-- /.container-fluid -->
      </section>

      <!-- Main content -->
      <section class="content">

        <div class="row">

          <div class="col-lg-12">
            <div class="nav-tabs-custom card">
              <ul class="nav nav-tabs  mb-3">
                <li class="nav-item"><a href="#tab_google" data-toggle="pill" aria-expanded="true" role="tab"
                    class="nav-link active"><i class="fa fa-google"></i>&nbsp;Google</a></li>
                <li class="nav-item"><a href="#tab_watson" data-toggle="pill" aria-expanded="false" role="tab"
                    class="nav-link "><i class="fa fa-cloud"></i>&nbsp;IBM Watson</a></li>
                <li class="nav-item"><a href="#tab_azure" data-toggle="pill" aria-expanded="false" role="tab"
                    class="nav-link"><i class="fa fa-windows"></i>&nbsp;Microsoft Azure</a></li>
                <li class="nav-item"><a href="#tab_amazon" data-toggle="pill" aria-expanded="false" role="tab"
                    class="nav-link"><i class="fa fa-amazon"></i>&nbsp;Amazon</a></li>
              </ul>
              <div class="tab-content">
                <div class="tab-pane" id="tab_azure">
                  <form role="form">
                    <div class="card-body">
                      <div class="form-group">
                        <label for="inputAzureSpeechClientID">Speech Client ID</label>
                        <input type="text" class="form-control" id="azure_key">
                      </div>
                      <div class="form-group">
                        <label for="inputAzureURL">URL</label>
                        <input type="text" class="form-control" id="azure_url">
                      </div>
                      <div class="form-group">
                        <label for="inputAzureLocation">Location</label>
                        <input type="text" class="form-control" id="azure_location">
                      </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                      <button type="button" class="btn btn-primary" id="save_azure_btn">Save</button>
                    </div>
                  </form>
                </div>
                <!-- /.tab-pane -->
                <div class="tab-pane active" id="tab_google">
                  <form role="form">
                    <div class="card-body">
                      <div class="row">
                        <div class="col-lg-4">
                          <div class="form-group">
                            <label for="inputGoogleType">Type</label>
                            <select class="form-control" id="google_type">
                              <option disabled selected value> -- select type -- </option>
                              <option value='service_account'>Service Account</option>
                            </select>
                          </div>
                        </div>
                        <div class="col-lg-4">
                          <div class="form-group">
                            <label for="inputGoogleProjectId">Project ID</label>
                            <input type="text" class="form-control" id="google_project_id">
                          </div>
                        </div>
                        <div class="col-lg-4">
                          <div class="form-group">
                            <label for="inputGooglePrivateKeyId">Private Key ID</label>
                            <input type="text" class="form-control" id="google_private_key_id">
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-lg-6">
                          <div class="form-group">
                            <label for="inputGooglePrivateKey">Private Key</label>
                            <textarea class="form-control" rows="5" id="google_private_key"></textarea>
                          </div>
                        </div>
                        <div class="col-lg-6">
                          <div class="form-group">
                            <label for="inputGoogleClientEmail">Client Email</label>
                            <input type="text" class="form-control" id="google_client_email">
                          </div>
                          <div class="form-group">
                            <label for="inputGoogleClientId">Client ID</label>
                            <input type="text" class="form-control" id="google_client_id">
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-lg-4">
                          <div class="form-group">
                            <label for="inputGoogleAuthURI">Auth URI</label>
                            <input type="text" class="form-control" id="google_auth_uri">
                          </div>
                        </div>
                        <div class="col-lg-4">
                          <div class="form-group">
                            <label for="inputGoogleTokenUri">Token URI</label>
                            <input type="text" class="form-control" id="google_token_uri">
                          </div>
                        </div>
                        <div class="col-lg-4">
                          <div class="form-group">
                            <label for="inputGoogleAuthProviderx509CertUrl">Auth Provider x509 Certificate URL</label>
                            <input type="text" class="form-control" id="google_auth_provider_x509_cert_url">
                          </div>
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="inputGoogleClientx509CertUrl">Client x509 Certificate URL</label>
                        <input type="text" class="form-control" id="google_client_x509_cert_url">
                      </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                      <button type="button" class="btn btn-primary" id="save_google_btn">Save</button>
                    </div>
                  </form>
                </div>
                <!-- /.tab-pane -->
                <div class="tab-pane" id="tab_watson">
                  <form role="form">
                    <div class="card-body">
                      <div class="form-group">
                        <label for="inputWatsonAuthType">Authentication Type</label>
                        <select class="form-control" id="watson_authtype">
                            <option disabled selected value> -- select type -- </option>
                            <option value='bearer_token'>Bearer Token</option>
                            <option value='iam_auth'>IAM Authentication</option>
                          </select>
                      </div>
                      <div class="form-group">
                        <label for="inputWatsonAPIKey">Key</label>
                        <input type="text" class="form-control" id="watson_apiKey">
                      </div>
                      <div class="form-group">
                        <label for="inputWatsonURL">URL</label>
                        <input type="text" class="form-control" id="watson_url">
                      </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                      <button type="button" class="btn btn-primary" id="save_watson_btn">Save</button>
                    </div>
                  </form>
                </div>
                <!-- /.tab-pane -->
                <!-- /.tab-pane -->
                <div class="tab-pane" id="tab_amazon">
                  <form role="form">
                    <div class="card-body">
                      <div class="form-group">
                        <label for="inputAmazonAPIKey">API Key</label>
                        <input type="text" class="form-control" id="amazon_apiKey">
                      </div>
                      <div class="form-group">
                        <label for="inputAmazonSecret">secret</label>
                        <input type="text" class="form-control" id="amazon_secret">
                      </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                      <button type="button" class="btn btn-primary" id="save_amazon_btn">Save</button>
                    </div>
                  </form>
                </div>
              </div>
              <!-- /.tab-content -->
            </div>
          </div>
        </div>
      </section>

      <!-- The actual snackbar -->
      <div id="snackbar">Saved</div>

      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <footer class="main-footer">
      <% include ..//partials/footer %>
    </footer>
  </div>
  <!-- ./wrapper -->


  <!-- Socket.io -->
  <script src='/socket.io/socket.io.js'></script>
  <script type="text/javascript">
    $('#settings_stt_engines_treeview').addClass('active');

    activeTab('google');

    function activeTab(tab) {
      $('.nav-tabs a[href="#tab_' + tab + '"]').tab('show');
    };

    var socket = io('/admin', {
      path: '/socket.io'
    });
    socket.on('connect', function (data) {
      socket.emit('register-admin');
      socket.emit('get-stt-configs');

    }).on('load-stt-azure-configs', function (data) {
      $('#azure_key').val(data.key);
      $('#azure_url').val(data.url);
      $('#azure_location').val(data.location);
    }).on('load-stt-google-configs', function (data) {
      $('#google_type').val(data.type);
      $('#google_project_id').val(data.project_id);
      $('#google_private_key_id').val(data.private_key_id);
      $('#google_private_key').text(data.private_key);
      $('#google_client_email').val(data.client_email);
      $('#google_client_id').val(data.client_id);
      $('#google_auth_uri').val(data.auth_uri);
      $('#google_token_uri').val(data.token_uri);
      $('#google_auth_provider_x509_cert_url').val(data.auth_provider_x509_cert_url);
      $('#google_client_x509_cert_url').val(data.client_x509_cert_url);
    }).on('load-stt-watson-configs', function (data) {
      $('#watson_authtype').val(data.authtype);
      $('#watson_apiKey').val(data.apikey);
      $('#watson_url').val(data.url);
    }).on('load-stt-amazon-configs', function (data) {
      $('#amazon_apiKey').val(data.key);
      $('#amazon_secret').val(data.secret);
    }).on('save-stt-success', function (sttEngine) {
      $('#snackbar').html(sttEngine + " Configs Saved")
      $('#snackbar').addClass("show");
      setTimeout(function () {
        $('#snackbar').removeClass("show");
      }, 3000);
    });


    $('#save_azure_btn').on('click', function (e) {
      e.preventDefault();
      var data = {};
      data.key = $('#azure_key').val();
      data.url = $('#azure_url').val();
      data.location = $('#azure_location').val();
      socket.emit('update-azure-configs', data);
    });

    $('#save_google_btn').on('click', function (e) {
      e.preventDefault();
      var data = {};
      data.type = $('#google_type').val();
      data.project_id = $('#google_project_id').val();
      data.private_key_id = $('#google_private_key_id').val();
      data.private_key = $('#google_private_key').val();
      data.client_email = $('#google_client_email').val();
      data.client_id = $('#google_client_id').val();
      data.auth_uri = $('#google_auth_uri').val();
      data.token_uri = $('#google_token_uri').val();
      data.auth_provider_x509_cert_url = $('#google_auth_provider_x509_cert_url').val();
      data.client_x509_cert_url = $('#google_client_x509_cert_url').val();

      socket.emit('update-google-configs', data);
    });

    $('#save_watson_btn').on('click', function (e) {
      e.preventDefault();
      var data = {};
      data.authtype = $('#watson_authtype').val();
      data.apikey = $('#watson_apiKey').val();
      data.url = $('#watson_url').val();
      socket.emit('update-watson-configs', data);
    });
    $('#save_amazon_btn').on('click', function (e) {
      e.preventDefault();
      var data = {};
      data.key = $('#amazon_apiKey').val();
      data.secret = $('#amazon_secret').val();
      socket.emit('update-amazon-configs', data);
    });
  </script>
</body>

</html>